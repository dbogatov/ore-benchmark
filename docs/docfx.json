{
	"metadata": [{
		"src": [{
			"files": ["src/**/*.csproj", "test/*.csproj"],
			"exclude": ["**/bin/**", "**/obj/**"],
			"src": ".."
		}],
		"dest": "obj/api"
	}],
	"build": {
		"content": [{
				"files": ["**/*.yml"],
				"src": "obj/api",
				"dest": "api"
			},
			{
				"files": ["articles/**/*.md", "*.md", "toc.yml", "restapi/**"]
			}
		],
		"resource": [{
			"files": ["articles/images/**"]
		}],
		"overwrite": "specs/*.md",
		"globalMetadata": {
			"_appTitle": "ORE Schemes Simulator",
			"_enableSearch": true
		},
		"template": [
			"default"
		],
		"markdownEngineName": "markdig",
		"dest": "_site",
		"xrefService": ["https://xref.docs.microsoft.com/query?uid={uid}"]
	}
}
